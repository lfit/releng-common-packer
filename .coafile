[all]
ignore = .tox/**,
    .git/**,
    .gitignore,
    .gitreview,
    .gitmodules,
    node_modules/**,
    **.sw?,
    **.orig

[all.Documentation]
bears = SpaceConsistencyBear,WriteGoodLintBear
files = docs/**.rst
use_spaces = true

[all.GitCommit]
bears = GitCommitBear
ignore_length_regex = Signed-off-by,
    Also-by,
    Co-authored-by,
    http://,
    https://

[all.ShellCheck]
bears = ShellCheckBear,SpaceConsistencyBear
files = provision/**.sh
shell = bash
indent_size = 4
use_spaces = yeah
